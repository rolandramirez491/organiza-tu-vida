<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/taskTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu tarea" />

    <EditText
        android:id="@+id/dateTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecciona la fecha"
        android:focusable="false"
        android:clickable="true" />

    <EditText
        android:id="@+id/timeTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecciona la hora"
        android:focusable="false"
        android:clickable="true" />

    <!-- Botones de prioridad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/priorityButton1"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/priorityButton2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/priorityButton3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="3" />

        <Button
            android:id="@+id/priorityButton4"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/priorityButton5"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:text="5" />
    </LinearLayout>

</LinearLayout>
