<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/taskTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu tarea" />

    <EditText
        android:id="@+id/dateTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (DD/MM/YYYY)" />

    <EditText
        android:id="@+id/timeTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora (12 horas)" />

    <Button
        android:id="@+id/addTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Tarea" />

    <Button
        android:id="@+id/showTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Tarea" />

    <Button
        android:id="@+id/modifyTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Tarea" />

    <LinearLayout
        android:id="@+id/taskDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>
